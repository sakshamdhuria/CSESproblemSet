#include <bits/stdc++.h>
using namespace std;

#define int long long 
const long long  mod =1e9+7;
int32_t main() {
    ios::sync_with_stdio(false);
    cin.tie(NULL);
    
    int n; 
    cin>>n; 
    int ans=1;
    for(int i=0; i<n; i++){
        ans*=2;
        ans%=mod;
    }
    cout<<ans<<endl;
    return 0;
}
