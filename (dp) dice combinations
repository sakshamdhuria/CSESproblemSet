#include <bits/stdc++.h>
using namespace std;
 
#define int long long
int mod = 1e9+7;
int32_t solve(int n);
 
int32_t main() {
    ios::sync_with_stdio(false);
    cin.tie(NULL);
    int n;
    cin >> n;
    int ans = solve(n);
    cout << ans << endl;
    return 0;
}
 
int32_t solve(int n) {
  vector<int> dp(n+1, 0);
  dp[0]=1;
 
  for(int i=1; i<=n; i++){
    for(int j=1; j<=6; j++){
      if (i - j >= 0) {
        dp[i] = (dp[i] + dp[i - j]) % mod;
      }
    }
  }
  return dp[n];
 
}
